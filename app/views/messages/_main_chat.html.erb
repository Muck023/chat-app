<div class="main_chat_hero">
  
  <div class="main_chat_header">
    <div class="main_chat_roomtitle"><%= @room.name %></div>
    <div class="main_chat_roomend">
      <div class="main_chat_roomend_margin"><a href="#">チャットを終了する</a></div>
    </div>
  </div>
  
  <div class="main_chat_style">
    <%= render partial: 'message', collection: @messages %>
  </div>
  
  <%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="main_chat_footer">
    <div class="main_chat_typing_style">
      <%= f.text_field :content, class: 'main_chat_typing', placeholder: 'type a message' %>
      <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
    </div>
    <%= f.submit '送信', class: 'main_chat_bottom' %>
  </div>
<% end %>

</div>